@model PlayZone.Web.ViewModels.Home.IndexViewModel
@using PlayZone.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="row">

    @foreach (var video in Model.Videos)
    {
        <div class="col-lg-4 col-md-12">

            <!--Card Wider-->
            <div class="card card-cascade wider">

                <!--Card image-->
                <div class="view view-cascade overlay">
                    <a href="\videos\@video.Id">
                        <img src="http://i3.ytimg.com/vi/@video.Url/maxresdefault.jpg" class="card-img-top"
                             alt="wider">
                    </a>

                </div>
                <!--/Card image-->
                <!--Card content-->
                <div class="card-body card-body-cascade text-center">
                    <!--Title-->
                    <a href="\videos\@video.Id"><h4 class="card-title"><strong>@video.Title</strong></h4></a>
                    <hr />
                    <p class="card-text">
                        Chanel: @video.UserUserName
                    </p>
                    <p class="card-text">
                       Before: @video.AddBefore
                    </p>
                </div>
                <!--/.Card content-->

            </div>
            <!--/.Card Wider-->

        </div>
    }
</div>