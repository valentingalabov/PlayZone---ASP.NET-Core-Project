@model PlayZone.Web.ViewModels.Chanels.AllVideosByChanelViewModel
@{
    ViewData["Title"] = "Videos";
}

<a class="btn btn-secondary" asp-controller="Chanels" asp-action="Details" asp-route-id="@Model.Chanel.Id">&lt Back</a>

<h1>@Model.Chanel.Title Chanel videos:</h1>
<div class="row">
    @foreach (var video in Model.Videos)
    {
        <div class="col-lg-4 col-md-12">

            <!--Card Wider-->
            <div class="card card-cascade wider">

                <!--Card image-->
                <div class="view view-cascade overlay">
                    <a asp-controller="Videos" asp-action="Details" asp-route-id="@video.Id">
                        <img src="@video.EmbedVideoImageUrl" class="card-img-top"
                             alt="wider">
                    </a>

                </div>
                <!--/Card image-->
                <!--Card content-->
                <div class="card-body card-body-cascade text-center">
                    <!--Title-->
                    <a asp-controller="Videos" asp-action="Details" asp-route-id="@video.Id"><h4 class="card-title"><strong>@video.Title</strong></h4></a>
                    <hr />
                    <div class="row">
                        <div class="col-md-3">
                            <a asp-controller="Chanels" asp-action="Details" asp-route-id="@video.ChanelId"><img src="@video.EmbedChanelImageUrl" /></a>
                        </div>
                        <div class="col-md-9">
                            <p class="card-text">
                                Chanel: @video.ChanelTitle
                            </p>
                        </div>
                    </div>
                    <p class="card-text">
                        Before: @video.AddBefore
                    </p>
                </div>
                <!--/.Card content-->

            </div>
            <!--/.Card Wider-->

        </div>

    }
</div>
<hr />

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Chanels"
                   asp-action="Videos"
                   asp-route-id="@Model.Chanel.Id"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-controller="Chanels"
                   asp-action="Videos"
                   asp-route-id="@Model.Chanel.Id"
                   asp-route-page=" @i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Chanels"
                   asp-action="Videos"
                   asp-route-id="@Model.Chanel.Id"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>