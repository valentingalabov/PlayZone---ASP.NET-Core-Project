@model PlayZone.Web.ViewModels.Chanels.ChanelDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="text-center">

    @if (Model.ImageUrl != null)
    {
        <div class="container">
            <div>

                <img src="http://res.cloudinary.com/dqh6dvohu/image/upload/c_thumb,g_center,h_339,w_958/@Model.ImageUrl" class="img-fluid">
            </div>
        </div>
        <div class="btn btn-mdb-color btn-rounded float-left">
            <a asp-controller="Chanels" asp-action="ImageUpload" asp-route-id="@Model.Id">Change Image</a>
        </div>
        <br />
        <br />
    }
    else
    {

        <form class="md-form">
            <div class="file-field">
                <div class="z-depth-1-half mb-4">
                    <img src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg" width="958" height="339" class="img-fluid"
                         alt="example placeholder">
                </div>
                <div class="d-flex justify-content-center">
                    <div class="btn btn-mdb-color btn-rounded float-left">
                        <a asp-controller="Chanels" asp-action="ImageUpload" asp-route-id="@Model.Id">Image Upload</a>
                    </div>
                </div>
            </div>
        </form>


    }
    <div>
        <h1>@Model.Title</h1>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light row">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Chanels" asp-action="Videos" asp-route-id="@Model.Id" >Videos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Chanels" asp-action="Description" asp-route-id="@Model.Id">Description</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Videos" asp-action="Create" asp-route-id="@Model.Id">Add Video</a>
                </li>
            </ul>
        </div>
    </nav>

</div>