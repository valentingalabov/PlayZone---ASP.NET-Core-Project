@model PlayZone.Web.ViewModels.Chanels.ChanelEditInputModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="pagination-centered">
    <form method="post" asp-controller="Chanels" asp-action="Edit">
        <div>
            <label asp-for="Title" ></label>
            <input asp-for="Title" class="form-control"  value="@Model.Title"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>


        <div>
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <hr />
        <div>
            <input type="submit" class="btn btn-primary" value="Edit" />
            <a asp-controller="Chanels" asp-action="Details" asp-route-id="@Model.Id"  class="btn btn-primary">Cancel</a>

        </div>

    </form>
</div>
