@model PlayZone.Web.ViewModels.Videos.ConfirmationDeleteViewModel
@{
    ViewData["Title"] = "ConfirmationDelete";
}
    <div class="text-center">
        <div class="row" >
            <h3 class="col-md-12">Title: @Model.Title</h3>
        </div>
        <div class="embed-responsive embed-responsive-16by9">
            <iframe  class="embed-responsive-item" src="@Model.EmbeddUrl" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <hr />
        <div class="row">
            <h1 class="col-md-12">Are you shure you want to delete video?</h1>
        </div>
        <div class="row justify-content-center">
            <a class="brn btn-danger btn-lg col-md-4 mr-2 mt-2" asp-controller="Videos" asp-action="Delete" asp-route-id="@Model.Id">Yes</a>
            <a class="brn btn-primary btn-lg col-md-4 mr-2 mt-2" asp-controller="Videos" asp-action="Details" asp-route-id="@Model.Id">No</a>
        </div>
    </div>