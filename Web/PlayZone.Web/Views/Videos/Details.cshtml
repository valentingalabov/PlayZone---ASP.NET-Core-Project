@model PlayZone.Web.ViewModels.Videos.VideoDetailsViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="">
    <h1>@Model.Title</h1>
</div>
<div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@Model.Url?autoplay=1" frameborder="0" 
            allow="accelerometer; autoplay=1; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>
<p>Created on: @Model.CreatedOn.ToString("dd.MM.yyyy") by @Model.UserUserName</p>
<h5>Descaription:</h5>
<hr />
<p>@Model.Description</p>